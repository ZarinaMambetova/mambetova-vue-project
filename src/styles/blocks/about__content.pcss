.about__content {
  margin-top: 20px;
  padding-left: 30px;
  @include desktop {
    padding-left: 10px;
  }
  @media screen and (max-width: 720px) {
    padding-left: 5px;
  }
  @media screen and (max-width: 560px) {
    padding-left: 0;
  }
}

.about__desc,
.about__text-info,
.about__ps {
  opacity: 0.5;
  margin-bottom: 20px;
}
.about__ps {
  position: relative;

  &:before {
    content: "";
    display: block;
    background: url('~images/content/star.png') center center no-repeat;
    width: 23px;
    height: 23px;
    transition: .3s;
    position: absolute;
    left: -52px;
  }
}

.about__title {
  opacity: 1;
  font-size: 36px;
  margin-bottom: 30px;
}

.about__text-info {
  margin-bottom: 77px;
}
