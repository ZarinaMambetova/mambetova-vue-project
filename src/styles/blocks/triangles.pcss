.triangles {
  display: flex;
  height: 100px;

  &--pointed-down {
    .triangles__shape {
      transform: rotate(180deg);
    }
  }
}

.triangles__shape {
  fill: #fff;

  height: 100%;
}
.triangles__shape.triangles__shape--left {
  width: 75%;
}
.triangles__shape.triangles__shape--right {
  width: 25%;
}
