.hamburger {
  flex-direction: column;
  display: none;
  background: none;
  padding: 5px;
  @include tablets {
    display: flex;
  }
  @include phones {
    display: flex;
  }
}

.hamburger__line {
  width: 29px;
  height: 3px;
  background: #fff;
  display: inline-block;
  border-radius: 2px;
  margin-bottom: 4px;
  transition: all .5s linear;
}

.menu-open .hamburger {
  z-index: 9999;
  position: fixed;
  right: 0;
}

.menu-open .hamburger__line:nth-child(2n + 0) {
  opacity: 0;
}

.menu-open .hamburger__line:nth-child(1n + 0) {
  transform: rotate(45deg) translateY(10px);
  background: #414c63;
}

.menu-open .hamburger__line:nth-child(3n + 0) {
  transform: rotate(-45deg) translateY(-10px);
  background: #414c63;
  margin-bottom: 0;
}
