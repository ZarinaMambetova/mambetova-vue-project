.user__data {
  margin-top: 90px;
}

.user__data-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 20px;
}

.user__data-title {
  opacity: 0.5;
  width: 155px;
  @media screen and (max-width: 380px) {
    width: 100px;
  }
}

.user__avatar-style {
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0 rgba(#000, .3);
  margin: 0 70px;
  flex-shrink: 0;
}
